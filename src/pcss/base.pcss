@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  font-family: Onest, 'Noto Sans TC', sans-serif;
  color: theme('colors.neutral.600');
  letter-spacing: 0.5px;
}

ul li {
  list-style: none;
  padding-left: 1em;
  margin-bottom: theme('spacing.2');
  &::before {
    content: '-';
    display: inline-block;
    width: 1em;
    margin-left: -1em;
  }
}

ol {
  padding-left: 1.5em;
  margin-bottom: theme('spacing.1');
  li {
    list-style: decimal;
    margin-top: theme('spacing.1');
    margin-bottom: theme('spacing.2');
    padding-left: theme('spacing.1');
    li {
      list-style: lower-alpha;
      li {
        list-style: lower-roman;
      }
    }
  }
}

p:last-child {
  margin-bottom: 0;
}

a:not(.btn, .nav-link) {
  &:link,
  &:visited {
    color: theme('colors.primary');
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
}

.btn {
  @apply inline-flex cursor-pointer items-center justify-center font-normal text-base rounded-md;
  padding: theme('spacing.1') theme('spacing.3');
  transition: all 0.3s ease;
}

.btn-primary {
  color: theme('colors.white');
  background-color: theme('colors.primary');
  &:hover {
    filter: brightness(90%);
  }
}

.btn-outline-dark {
  color: theme('colors.neutral.500');
  border: 1px solid theme('colors.neutral.500');
  &:hover {
    color: theme('colors.primary');
    border-color: theme('colors.primary');
  }
}

#modal {
  @apply fixed left-0 top-0 w-full h-full z-50 flex items-center justify-center p-4;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(2px);
  transition: all 0.3s ease;
  opacity: 0;
  pointer-events: none;
  > .inner-modal {
    @apply flex flex-col bg-white min-w-80 max-w-lg;
    max-height: 100%;
    transition: all 0.3s ease;
    transform: translateY(20px);
  }
  .modal-body {
    flex: 1;
    overflow-y: auto;
    hr {
      margin: 1rem 0;
    }
  }
  &.show {
    opacity: 1;
    pointer-events: auto;
    > .inner-modal {
      transform: translateY(0);
    }
  }
}

#loading {
  z-index: 9999;
  background: white;
  opacity: 1;
  overflow: hidden;
  transition: all 1s ease;
  img {
    height: 100%;
    max-width: unset;
    transform-origin: 42.8% 43.4%;
    &.preload {
      transform: scale(30);
    }
  }
  &.scale img {
    image-rendering: pixelated;
    transition: all 2s ease;
    transform: scale(30);
  }
  &.fadeout {
    pointer-events: none;
    opacity: 0;
  }
}

@media (max-width: theme('screens.sm')) {
  .offcanvas-box {
    @apply fixed top-0 left-0 w-full h-full bg-slate-100 z-50 flex flex-col text-xl text-center p-0;
    pointer-events: none;
    opacity: 0;
    transform: translateX(20px);
    transition: all 0.3s ease;
    &.show {
      transform: translateX(0);
      pointer-events: all;
      opacity: 1;
    }
    > a {
      margin-bottom: theme('spacing.4');
    }
  }
}

/* mobile-friendly <abbr> support */
@media (hover: none) {
  abbr[title] {
    text-decoration: none;
    &:after {
      content: '（' attr(title) '）';
    }
    &:lang(en):after {
      content: ' (' attr(title) ')';
    }
  }
}

/* Prevent modal dialogs from stuttering page */
:root:has(#modal) {
  scrollbar-gutter: stable;
}
